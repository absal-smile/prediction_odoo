<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_conformity_form" model="ir.ui.view">
        <field name="name">ux.conformity.form</field>
        <field name="model">ux.conformity</field>
        <field name="arch" type="xml">
            <form string="Conformity">
                <group>
                    <field name="name" />
                </group>
            </form>
        </field>
    </record>

    <record id="view_conformity_list" model="ir.ui.view">
        <field name="name">ux.conformity.list</field>
        <field name="model">ux.conformity</field>
        <field name="arch" type="xml">
            <list string="Conformity" editable="bottom">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="action_conformity" model="ir.actions.act_window">
        <field name="name">Conformity</field>
        <field name="res_model">ux.conformity</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_conformity_list" />
    </record>


</odoo>