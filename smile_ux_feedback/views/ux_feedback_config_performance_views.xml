<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_performance_form" model="ir.ui.view">
        <field name="name">ux.performance.form</field>
        <field name="model">ux.performance</field>
        <field name="arch" type="xml">
            <form string="Performance">
                <group>
                    <field name="name" />
                </group>
            </form>
        </field>
    </record>

    <record id="view_performance_list" model="ir.ui.view">
        <field name="name">ux.performance.list</field>
        <field name="model">ux.performance</field>
        <field name="arch" type="xml">
            <list string="Performance" editable="bottom">
                <field name="name" />
            </list>
        </field>
    </record>
    
    <record id="action_performance" model="ir.actions.act_window">
        <field name="name">Performance</field>
        <field name="res_model">ux.performance</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_performance_list" />
    </record>


</odoo>